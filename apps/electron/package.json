{
  "displayName": "OpenOrca",
  "name": "@openorca/electron",
  "description": "A modern terminal emulator",
  "version": "0.0.0",
  "main": "./node_modules/.dev/main/index.mjs",
  "resources": "src/resources",
  "author": {
    "name": "OpenOrca",
    "email": "hello@openorca.dev"
  },
  "license": "MIT",
  "scripts": {
    "start": "electron-vite preview",
    "predev": "run-s clean:dev patch:name",
    "patch:name": "node scripts/patch-electron-name.mjs",
    "dev": "cross-env NODE_ENV=development electron-vite dev --watch",
    "compile:app": "electron-vite build",
    "compile:packageJSON": "tsx ./src/lib/electron-app/release/modules/prebuild.ts",
    "prebuild": "run-s clean:dev compile:app compile:packageJSON",
    "build": "pnpm electron-builder",
    "setup": "run-s prebuild install:deps",
    "install:deps": "electron-builder install-app-deps",
    "make:release": "tsx ./src/lib/electron-app/release/modules/release.ts",
    "release": "electron-builder --publish always",
    "clean:dev": "rimraf ./node_modules/.dev",
    "lint": "biome check --no-errors-on-unmatched",
    "lint:fix": "biome check --write --no-errors-on-unmatched --assist-enabled=true",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@openorca/config": "workspace:*",
    "@openorca/preload": "workspace:*",
    "@visual-json/core": "^0.1.0",
    "@visual-json/react": "^0.1.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "electron-updater": "^6.8.3",
    "ghostty-web": "^0.4.0",
    "lucide-react": "^0.556.0",
    "radix-ui": "^1.4.3",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "tailwind-merge": "^3.4.0",
    "zustand": "^5.0.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@tailwindcss/vite": "^4.1.17",
    "@types/node": "catalog:",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "code-inspector-plugin": "^1.3.0",
    "cross-env": "^10.1.0",
    "electron": "^39.2.6",
    "electron-builder": "^26.0.12",
    "electron-devtools-installer": "^3.2.0",
    "electron-vite": "^4.0.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.1.2",
    "tailwindcss": "^4.1.17",
    "tsx": "^4.21.0",
    "typescript": "catalog:",
    "vite": "^7.2.6",
    "vite-plugin-static-copy": "^2.2.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.18"
  }
}
